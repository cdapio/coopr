{
  "name": "fog",
  "description": "Multi-cloud fog-based provider (AWS, Google, Openstack, Rackspace, Joyent)",
  "providertypes": [ "aws", "google", "joyent", "openstack", "rackspace" ],
  "aws" : {
    "name": "aws",
    "classname": "FogProviderAWS",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "api_user": {
            "label": "Access Key ID",
            "type": "text",
            "tip": "AWS Access Key ID"
          },
          "api_password": {
            "label": "Secret Access Key",
            "type": "password",
            "tip": "AWS Secret Access Key"
          },
          "aws_credential_file": {
            "label": "AWS Credential file",
            "type": "text",
            "override": true,
            "tip": "Full path and file name to AWS credential file as used by AWS command line tools"
          },
          "ssh_keypair": {
            "label": "Key Pair Name",
            "type": "text",
            "override": true,
            "tip": "Your AWS EC2 key pair name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "override": true,
            "tip": "Name of the SSH private key resource uploaded to the server"
          },
          "aws_region": {
            "label": "AWS Region",
            "type": "select",
            "options": [
              "ap-northeast-1",
              "ap-southeast-1",
              "ap-southeast-2",
              "eu-west-1",
              "sa-east-1",
              "us-east-1",
              "us-west-1",
              "us-west-2"
            ],
            "default": "us-east-1",
            "override": false,
            "tip": "AWS Region"
          }
        },
        "required": [
          [
            "api_user",
            "api_password",
            "ssh_keypair",
            "ssh_key_resource",
            "aws_region"
          ],
          [
            "aws_credential_file",
            "ssh_keypair",
            "ssh_key_resource",
            "aws_region"
          ]
        ]
      },
      "user": {
        "fields": {
          "security_groups": {
            "label": "Security Groups",
            "type": "text",
            "default": "default",
            "tip": "AWS security group (non-VPC)"
          },
          "security_group_ids": {
            "label": "Security Group IDs (VPC only)",
            "type": "text",
            "tip": "AWS security group IDs (required for VPC)"
          },
          "subnet_id": {
            "label": "Subnet ID (VPC only)",
            "type": "text",
            "tip": "Enable VPC and use this subnet ID"
          },
          "dedicated_instance": {
            "label": "Use Dedicated instances (VPC only)",
            "type": "checkbox",
            "tip": "Launch as dedicated instances (VPC only)"
          },
          "associate_public_ip": {
            "label": "Associate public IP (VPC only)",
            "type": "checkbox",
            "tip": "Associate public IP (VPC only)"
          },
          "availability_zone": {
            "label": "Availability Zone",
            "type": "text",
            "tip": "AWS Availability Zone"
          },
          "iam_instance_profile": {
            "label": "IAM instance profile",
            "type": "text",
            "tip": "IAM instance profile to apply to cluster"
          },
          "placement_group": {
            "label": "Placement group",
            "type": "text",
            "tip": "Placement group to place cluster instances"
          }
        },
        "required": [
          [ "security_groups" ],
          [ "security_group_ids", "subnet_id" ]
        ]
      }
    }
  },
  "google": {
    "name": "google",
    "classname": "FogProviderGoogle",
    "resourceTypes": {
        "api_keys": {
            "format": "file",
            "permissions": "0400"
        },
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "google_project": {
            "label": "Project ID",
            "type": "text",
            "tip": "Google Project ID"
          },
          "google_client_email": {
            "label": "Service account email address",
            "type": "text",
            "tip": "Service account email address, should be of the form 123456789@developer.gserviceaccount.com"
          },
          "api_key_resource": {
            "label": "API Key Resource Name",
            "type": "text",
            "tip": "Name of the P12 key resource uploaded to the server"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH key resource uploaded to the server"
          },
          "ssh_user": {
            "label": "SSH Username",
            "type": "text",
            "tip": "SSH username. A corresponding key must be configured in the portal"
          },
          "google_data_disk_size_gb": {
            "label": "Data disk size in GB",
            "type": "text",
            "default": 10,
            "override": true,
            "tip": "Size of the persistent data disk to be created and mounted"
          },
          "zone_name": {
            "label": "Zone",
            "type": "select",
            "options": [
              "asia-east1-a",
              "asia-east1-b",
              "asia-east1-c",
              "europe-west1-a",
              "europe-west1-b",
              "us-central1-a",
              "us-central1-b",
              "us-central1-f"
            ],
            "default": "us-central1-a",
            "override": true,
            "tip": "Zone"
          }
        },
        "required": [
          [
            "google_project",
            "google_client_email",
            "api_key_resource",
            "ssh_key_resource",
            "zone_name"
          ]
        ]
      },
      "user": {
        "fields": {
          "network": {
            "label": "Network",
            "type": "text",
            "tip": "Google custom network"
          }
        },
        "required": [
          []
        ]
      }
    }
  },
  "joyent": {
    "name": "joyent",
    "classname": "FogProviderJoyent",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "api_user": {
            "label": "CloudAPI Username",
            "type": "text",
            "tip": "Your Joyent CloudAPI user name"
          },
          "api_password": {
            "label": "CloudAPI Password",
            "type": "password",
            "tip": "Your Joyent CloudAPI password"
          },
          "ssh_keypair" : {
            "label": "Key Name",
            "type": "text",
            "tip": "Your Joyent SSH Key Name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH private key resource uploaded to the server"
          },
          "joyent_version": {
            "label": "API version",
            "type": "text",
            "default": "~7.0",
            "tip": "CloudAPI version (~7.0 default)"
          },
          "joyent_api_url": {
            "label": "Region",
            "type": "select",
            "options": [
              "https://us-east-1.api.joyentcloud.com",
              "https://us-east-2.api.joyentcloud.com",
              "https://us-east-3.api.joyentcloud.com",
              "https://us-sw-1.api.joyentcloud.com",
              "https://us-west-1.api.joyentcloud.com",
              "https://eu-ams-1.api.joyentcloud.com"
            ],
            "default": "https://us-east-1.api.joyentcloud.com",
            "override": true,
            "tip": "Joyent Region"
          }
        },
        "required": [
          [ "api_user", "api_password" ],
          [ "api_user", "ssh_keypair", "ssh_key_resource" ]
        ]
      }
    }
  },
  "openstack": {
    "name": "openstack",
    "classname": "FogProviderOpenstack",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": { 
      "admin": {
        "fields": {
          "api_user": {
            "label": "Username",
            "type": "text",
            "tip": "Your Openstack user name"
          },
          "api_password": {
            "label": "Password",
            "type": "password",
            "tip": "Your Openstack password"
          },
          "openstack_tenant": {
            "label": "Tenant",
            "type": "text",
            "tip": "Your Openstack tenant"
          },
          "openstack_auth_url": {
            "label": "Auth URL",
            "type": "text",
            "default": "http://EXAMPLE.DOMAIN.COM:5000/v2.0/tokens",
            "tip": "Your Openstack Keystone API URL"
          },
          "ssh_keypair": {
            "label": "Key name",
            "type": "text",
            "tip": "Your Openstack SSH public key name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH private key resource uploaded to the server"
          },
          "openstack_ssl_verify_peer": {
            "label": "Verify SSL peers",
            "type": "checkbox",
            "tip": "Verify peer SSL certificates"
          }
        },
        "required": [
          [
            "api_user",
            "api_password",
            "openstack_tenant",
            "openstack_auth_url",
            "ssh_keypair",
            "ssh_key_resource"
          ]
        ]
      },
      "user": {
        "fields": {
          "security_groups": {
            "type": "text",
            "label": "Security Group",
            "default": "default",
            "tip": "Openstack security groups (comma separated)"
          },
          "availability_zone": {
            "type": "text",
            "label": "Availability Zone",
            "tip": "Openstack Availability Zone"
          },
          "floating_ip": {
            "type": "checkbox",
            "label": "Floating IP",
            "tip": "Request a floating IP address for each node"
          }
        },
        "required": [
          [ ]
        ]
      }
    }
  },
  "rackspace": {
    "name": "rackspace",
    "classname": "FogProviderRackspace",
    "resourceTypes": {
        "ssh_keys": {
            "format": "file",
            "permissions": "0400"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "api_user": {
            "label": "Username",
            "type": "text",
            "tip": "Your Rackspace user name"
          },
          "api_password": {
            "label": "API key",
            "type": "password",
            "tip": "Your Rackspace API key"
          },
          "rackspace_region": {
            "label": "Region",
            "type": "select",
            "options": [ "dfw", "ord", "iad", "lon", "syd", "hkg" ],
            "default": "dfw",
            "override": true,
            "tip": "Rackspace region"
          }
        },
        "required": [
          [
            "api_user",
            "api_password",
            "rackspace_region"
          ]
        ]
      },
      "user": {
        "fields": {
          "rackconnect_wait": {
            "label": "RackConnect Wait",
            "type": "checkbox",
            "tip": "Wait for RackConnect"
          },
          "ssh_keypair": {
            "label": "Key Name",
            "type": "text",
            "tip": "Your Rackspace SSH key name"
          },
          "ssh_key_resource": {
            "label": "SSH Key Resource Name",
            "type": "text",
            "tip": "Name of the SSH private key resource uploaded to the server"
          }
        },
        "required": [
          []
        ]
      }
    }
  }
}
