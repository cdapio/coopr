{
  "name": "lamp",
  "description": "LAMP stack (Linux, Apache, MySQL, Perl/PHP/Python) with SSL and HAproxy support",
  "defaults": {
    "services": [
      "base",
      "apache-httpd",
      "php",
      "php-modules",
      "mysql-server"
    ],
    "provider": "rackspace",
    "hardwaretype": "medium",
    "imagetype": "ubuntu12",
    "config": {
      "apache": {
        "default_site_enabled": "true",
        "default_modules": [
          "status",
          "alias",
          "auth_basic",
          "authn_file",
          "authz_default",
          "authz_groupfile",
          "authz_host",
          "authz_user",
          "autoindex",
          "dir",
          "env",
          "mime",
          "negotiation",
          "setenvif",
          "log_config",
          "logio",
          "perl",
          "php5",
          "python",
          "ssl"
        ]
      },
      "mysql": {
        "server_debian_password": "somedefaultpassword",
        "server_root_password": "somedefaultpassword",
        "server_repl_password": "somedefaultpassword",
        "data_dir": "/data/mysql",
        "server": {
          "directories": {
            "log_dir": "/data/mysql"
          }
        },
        "bind_address": "%ip.bind_v4.service.mysql-server%"
      },
      "php": {
        "directives": {
          "mysql.default_host": "%host.service.mysql-server%"
        },
        "modules": [
          "memcache"
        ]
      }
    }
  },
  "compatibility": {
    "hardwaretypes": [
      "small",
      "medium",
      "large",
      "xlarge",
      "xxlarge"
    ],
    "imagetypes": [
      "centos6",
      "ubuntu12"
    ],
    "services": [
      "base",
      "haproxy",
      "apache-httpd",
      "memcached",
      "php",
      "php-modules",
      "mysql-server"
    ]
  },
  "constraints": {
    "layout": {
      "mustcoexist": [
        [ "apache-httpd", "php", "php-modules" ]
      ]
    },
    "services": {
      "haproxy": {
        "quantities": {
          "max": "1"
        }
      },
      "mysql-server": {
        "quantities": {
          "max": "1"
        }
      }
    }
  },
  "administration": {
    "leaseduration": {
      "initial":0,
      "max":0,
      "step":0
    }
  }
}
